{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìÖ Interview Availability",
          "weight": "Bolder",
          "size": "Large",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "Please share your availability for the interview.",
          "isSubtle": true,
          "wrap": true,
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "‚úÖ Suggested slots (pick one or more):",
      "weight": "Bolder",
      "wrap": true,
      "spacing": "Medium"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "selectedSlot",
      "style": "expanded",
      "isMultiSelect": true,
      "choices": [
        {
          "title": "Thu, 15 Feb 2:00 PM ‚Äì 2:45 PM",
          "value": "slot-1|2025-02-15T14:00"
        },
        {
          "title": "Fri, 16 Feb 4:00 PM ‚Äì 4:45 PM",
          "value": "slot-2|2025-02-16T16:00"
        },
        {
          "title": "Mon, 19 Feb 11:00 AM ‚Äì 11:45 AM",
          "value": "slot-3|2025-02-19T11:00"
        }
      ],
      "placeholder": "Select one or more suggested slots"
    },
    {
      "type": "ActionSet",
      "spacing": "Medium",
      "actions": [
        {
          "type": "Action.ToggleVisibility",
          "title": "‚úçÔ∏è Enter a custom date & time",
          "targetElements": [
            "manualSection"
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "manualSection",
      "isVisible": false,
      "style": "good",
      "items": [
        {
          "type": "TextBlock",
          "text": "Manual entry",
          "weight": "Bolder",
          "wrap": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Date",
                  "id": "manualDate",
                  "label": "Date",
                  "isRequired": false,
                  "errorMessage": "Please select a date"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Time",
                  "id": "manualTime",
                  "label": "Start time",
                  "isRequired": false,
                  "errorMessage": "Please select a start time"
                }
              ]
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "Notes (optional)",
          "wrap": true,
          "spacing": "Small"
        },
        {
          "type": "Input.Text",
          "id": "notes",
          "isMultiline": true,
          "placeholder": "Any constraints or comments"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Timezone: Asia/Kolkata (IST)",
      "isSubtle": true,
      "wrap": true,
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "‚úÖ Confirm Slot(s)",
      "data": { "action": "confirm" }
    },
    {
      "type": "Action.Submit",
      "title": "‚ùå Decline participation",
      "data": {
        "action": "decline"
      }
    }
  ]
}